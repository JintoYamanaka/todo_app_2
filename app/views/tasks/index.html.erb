<% provide(:name, "作成") %>

<!--<p id="notice"><%#= notice %></p>-->

<!--<h1>TODOアプリ</h1>-->
<% if logged_in? %>
  <%= render 'form', task: @task %>
<% end %>
<div class="index-page__tasks">
  
  <div class="index-page__task-list">
    <h2>TODO</h2>
    <% @task_todo.each do |task| %>
      <table class='task_table'>
        <tr>
          <th>Name</th><td><%= task.name %></td>
        </tr>
        <tr>
          <th>Body</th><td><%= task.body %></td>
        </tr>
        <% if logged_in? %>
          <tr>
            <td colspan='2' class="task_buttons">
              <span><%= link_to '編集', edit_task_path(task), class: "btn btn-default btn-sm" %></span>
              <!--<%= link_to 'Destroy', task_path(task), method: :delete %>-->
              <span><%= link_to 'DONEにする', toggle_status_task_path(task), method: :patch, 
                                                                              class: "btn btn-default btn-sm" %></span>
            </td>
          </tr>
        <% end %>
      </table>       
    <% end %>
  </div>
  
  <div class="index-page__task-list">
    <h2>DONE</h2>
    <% @task_done.each do |task| %>
      <table class='task_table'>
        <tr>
          <th>Name</th><td><%= task.name %></td>
        </tr>
        <tr>
          <th>Body</th><td><%= task.body %></td>
        </tr>
        <% if logged_in? %>
          <tr>
            <td colspan='2' class="task_buttons">
              <span><%= link_to '編集', edit_task_path(task), class: "btn btn-default btn-sm" %></span>
              <span><%= link_to 'TODOにする', toggle_status_task_path(task), method: :patch, 
                                                                              class: "btn btn-default btn-sm" %></span>
            </td>
          </tr>
        <% end %>
      </table>       
    <% end %>
  </div>
</div>

